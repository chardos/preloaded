<div class="pay-page">

  <div class="pay-panel well col-md-4 col-md-offset-4">
    
  <%= form_tag charges_path do %>
    <article>
      <label class="amount">
        <span>Amount: <%= @amount %>USD</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-address="true"
            data-description="Preloaded card"
            data-currency="USD"
            data-amount="<%= @amount_in_cents %>"></script>
  <% end %>

  </div>

</div>